<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="bookflow" transaction-type="JTA">
<!--        <class>com.bookflow.model.Book</class>-->
<!--        <provider>org.hibernate.ejb.hibernatePersistence</provider>-->
        <mapping-file>META-INF/jpa-entity.xml</mapping-file>
        <properties>
            <property name="javax.persistence.jdbc.user" value="bookflow-admin" />
            <property name="javax.persistence.jdbc.password" value="passwd" />

            <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDBDialect" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/bookflow-mariadb" />
            <property name="hibernate.connection.url" value="jdbc:mariadb://localhost:3306/bookflow-mariadb" />


<!--            <property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver" />-->
<!--            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>-->
<!--            <property name="hibernate.hbm2ddl.auto" value="update"/>-->
        </properties>

    </persistence-unit>

</persistence>